= simple_form_for([@table.event, @table], :html => {:class => 'form'}) do |form|
  .form-group
    = form.input :event_id, :collection => Event.all, :selected => @table.event.id, :input_html => {:class => 'form-control'}
  .form-group
    = form.input :number, :input_html => {:class => 'form-control'}
  .form-group
    = form.input :max_seats, :input_html => {:class => 'form-control'}
  .form-group
    = form.button :submit, :class => 'btn btn-primary'